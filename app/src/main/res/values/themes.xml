<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_green</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- default text colors -->
        <item name="android:fontFamily">@font/raleway_font_family</item>
    </style>

    <style name="BaseAppTheme.AppTheme">
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background_yellow</item>
    </style>

    <style name="AppTheme.ResultPageTheme">
        <item name="android:windowBackground">@color/button_green</item>
        <item name="android:statusBarColor">@color/button_green</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/raleway_font_family</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DropDownTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DropdownTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@null</item>
        <item name="hintTextColor">@null</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>


</resources>