<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.answers.AnswerFragment"
    android:id="@+id/rootView"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/answerSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:padding="16dp"
        android:textSize="28sp"
        android:background="@drawable/drawable_answer_sheet_background"
        android:textColor="@color/black"
        android:text="@string/answer_sheet" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answerRv"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_below="@+id/answerSheetTitle"
        android:layout_above="@+id/goHomeBtn"
        tools:listitem="@layout/list_item_answer_sheet"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/goHomeBtn"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"
        android:text="@string/home"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="64dp"/>
</RelativeLayout>