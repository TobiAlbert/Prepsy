<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/rootView"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/optionAlphabet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/question_radio_option_background"
            android:textColor="@color/black"
            tools:text="A"/>

        <TextView
            android:id="@+id/optionText"
            android:layout_toEndOf="@+id/optionAlphabet"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Bulb is thin-walled and the liquid is a good conductor of heat."/>
    </RelativeLayout>
</merge>